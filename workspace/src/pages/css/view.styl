@import _common

html
  overflow hidden

:root
  font-size 16px
  

#screen
  position absolute
  width 100%
  height 100%
  top 0
  bottom 0
  left 0
  right 0
  margin auto
  

#level
  position absolute
  bottom 100px
  right 60px
  width 46px
  height 606px
  border solid 3px white

#level_bg
  position absolute
  bottom 0
  width 40px
  height 600px
  background #242424

#level_gauge
  position absolute
  bottom 0
  width 40px
  height 600px
  background-image: linear-gradient(180deg, #FF0000, #FFFF00, #00FF00, #00FFFF, #0000FF);
  clip-path: inset(300px 0 0 0)
  
#runner
  position absolute
  bottom 140px
  left 0
  right 0
  margin auto
  
#distance
  position absolute
  bottom 60px
  width 100%
  height 60px
  color black
  font-size 60px
  text-align center
  font-weight bold
  span.unit
    vertical-align bottom
    font-size 38px
    display inline-block
    padding 0 0 2px 8px
    
#ui
  position relative
  

button
  margin 10px
  width 40px
  height 40px
  background black
  border solid 1px #666666
  font-size 16px
  font-weight bold
  color #666666
  
.test2, .test3
  display none
  
#url
  color #CCCCCC
  width 100%
  font-size 3rem
  position absolute
  top 20px
  text-align center
  

  