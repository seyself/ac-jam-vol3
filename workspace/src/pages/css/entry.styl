@import _common

html
  overflow hidden

:root
  font-size 16px
  

#entry
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  height 400px
  margin auto

p
  text-align center
  font-size 2rem
  margin 2rem auto



input.text
  display block
  width 600px
  margin auto
  padding 1rem 1rem
  background white
  border solid 1px black
  text-align center
  font-size 2.5rem

button
  width 450px
  background black
  font-weight bold
  margin 5rem auto
  color white
  display block
  font-size 4rem
  padding 2rem 1rem



